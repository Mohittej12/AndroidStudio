        btnGetStarted.setOnClickListener(v -> {
            Toast.makeText(this, "Next process starting...", Toast.LENGTH_SHORT).show();
            // you can navigate to another Activity if needed
            // startActivity(new Intent(this, ThirdActivity.class));
        });
    }
}
